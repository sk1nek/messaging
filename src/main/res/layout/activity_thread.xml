<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Base.V23.Theme.AppCompat"
        tools:context=".ThreadActivity"
>
    <ListView
            android:layout_width="368dp"
            android:layout_height="551dp" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginBottom="12dp" android:layout_alignParentStart="true" android:id="@+id/listView">

    </ListView>

    <Button
            android:text="SEND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/send_sms_button"/>

    <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/autoCompleteTextView"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/send_sms_button"
    />




</RelativeLayout>
